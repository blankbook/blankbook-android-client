<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sm_margin"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/sm_margin"
    android:transitionName="@string/post_info_transition">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/md_margin"
        android:orientation="vertical">

        <Button
            android:id="@+id/upvote_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:alpha="0.5"
            android:background="@drawable/ic_up_caret" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <Button
            android:id="@+id/downvote_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:alpha="0.5"
            android:background="@drawable/ic_down_caret" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sm_margin"
        android:layout_marginEnd="@dimen/md_margin"
        android:layout_marginTop="@dimen/sm_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                style="@style/medium_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sm_margin"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textSize="@dimen/md_font" />

            <TextView
                android:id="@+id/group_name"
                style="@style/light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/md_margin"
                android:textSize="@dimen/sm_font" />
        </LinearLayout>

        <TextView
            android:id="@+id/content"
            style="@style/light_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="@dimen/md_font" />
    </LinearLayout>
</LinearLayout>
