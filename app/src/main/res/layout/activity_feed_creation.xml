<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.jacob.blankbookandroidclient.GroupCreationActivity">

    <include layout="@layout/toolbar" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/lg_margin"
        android:layout_marginStart="@dimen/lg_margin"
        android:layout_marginTop="@dimen/md_margin"
        android:hint="@string/name"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="@dimen/xl_font" />

    <TextView
        android:id="@+id/name_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sm_margin"
        android:layout_marginEnd="@dimen/lg_margin"
        android:layout_marginStart="@dimen/lg_margin"
        android:paddingEnd="@dimen/sm_margin"
        android:paddingStart="@dimen/sm_margin"
        android:textColor="@color/red"
        android:textSize="@dimen/md_font" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/lg_margin"
        android:layout_marginEnd="@dimen/lg_margin"
        android:layout_marginStart="@dimen/lg_margin"
        android:background="@color/white" />
</LinearLayout>
